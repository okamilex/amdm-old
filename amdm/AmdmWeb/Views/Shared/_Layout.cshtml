<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title MyAMDM</title>
    
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    @section Scripts {
        <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
        <script src="~/signalr/hubs"></script>
        <script src="@Url.Content("~/signalr/hubs")"></script>
        }
    
    <script>
        $(function () {

            debugger;

            // Ссылка на автоматически-сгенерированный прокси хаба
            var chat = $.connection.myHub;
            chat.client.logged = function (time) {

                $('#alertDiv').append('<div class="alert alert-info fade in"> ' +
            '<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>' +
            '<strong>Info!</strong> This alert box could indicate a neutral informative change or action.' +
          '</div>');
            };

            $.connection.hub.start().done(function () {
            });
        });
    </script>
        

    <!--<script src="~/Scripts/client-server.js"></script>-->





</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MyAmdm", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom panel-footer">
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
